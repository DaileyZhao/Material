<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseTitleView">
        <attr name="leftText" format="reference"/>
        <attr name="leftRes" format="reference"/> ,
        <attr name="titleText" format="reference"/>
        <attr name="rightText" format="reference"/>
        <attr name="rightRes" format="reference"/>
        <attr name="lineShow" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension"/>
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference"/>
        <attr name="shadow_right" format="reference"/>
        <attr name="shadow_bottom" format="reference"/>
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference"/>
    <declare-styleable name="BannerView">
        <attr name="open_mz_mode" format="boolean"/>
        <attr name="canLoop" format="boolean"/>
        <attr name="indicatorPaddingLeft" format="dimension"/>
        <attr name="indicatorPaddingRight" format="dimension"/>
        <attr name="indicatorAlign">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>
    <!--自定义滚动尺-->
    <declare-styleable name="RulerWheel">
        <!--大号刻度线颜色-->
        <attr name="lineColorMax" format="color"/>
        <!--中号刻度线颜色-->
        <attr name="lineColorMid" format="color"/>
        <!--小号刻度线颜色-->
        <attr name="lineColorMin" format="color"/>
        <!--大号刻度线的大小,优先级高于scaleWidth-->
        <attr name="MaxBarSize" format="dimension"/>
        <!--中号刻度线的大小,优先级高于scaleWidth-->
        <attr name="MidBarSize" format="dimension"/>
        <!--大号刻度线的大小,优先级高于scaleWidth-->
        <attr name="MinBarSize" format="dimension"/>
        <!--是否显示刻度值-->
        <attr name="showScaleValue" format="boolean"/>
        <!--是否渐显显示刻度尺-->
        <attr name="showGradient" format="boolean"/>
        <!--刻度宽度,所有的都一样大小-->
        <attr name="scaleWidth" format="dimension"/>
        <!--刻度左右间距-->
        <attr name="line_divider" format="dimension"/>
        <attr name="text_Size" format="integer"/>
        <attr name="text_color" format="color"/>
        <attr name="def_value" format="integer"/>
        <attr name="max_value" format="integer"/>
        <attr name="min_value" format="integer"/>
        <attr name="mask_bg" format="reference"/>
        <!--刻度值渐现-->
        <attr name="scaleValueGradient" format="boolean"/>
        <attr name="mode">
            <flag name="SCALE" value="0"/>
            <flag name="HALF" value="1"/>
        </attr>
        <attr name="dataMode">
            <flag name="AUTO" value="0" />
            <flag name="DATA" value="1"/>
        </attr>
        <attr name="dataSource"  format="reference"/>
        <attr name="alignMode">
            <flag name="UP" value="0"/>
            <flag name="DOWN" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
</resources>