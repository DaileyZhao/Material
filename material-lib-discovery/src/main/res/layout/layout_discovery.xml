<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiscoveryActivity">

    <TextView
        android:id="@+id/tv_distest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zcm.support.widget.rule.RulerWheel
        android:id="@+id/rule_wheel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:background="@color/white"
        app:MaxBarSize="0.5dp"
        app:MidBarSize="0.5dp"
        app:MinBarSize="0.5dp"
        app:lineColorMax="@color/black"
        app:lineColorMid="@color/black"
        app:lineColorMin="@color/black"
        app:line_divider="15dp"
        app:mask_bg="@drawable/me_img_choose"
        app:mode="SCALE"
        app:scaleWidth="1dp"
        app:showGradient="true"
        app:scaleValueGradient="true"
        app:showScaleValue="true"
        app:text_color="@color/black"/>
</LinearLayout>